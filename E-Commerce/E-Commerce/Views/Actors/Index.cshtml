@*Define Model*@
@model IEnumerable<Actor>

@*Define ViewData*@
@{
    ViewData["Title"] = "List Of Actors";
}

@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl) </th>
                    <th>@Html.DisplayNameFor(model => model.FullName) </th>
                    <th>@Html.DisplayNameFor(model => model.Bio) </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var actor in Model){
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.ProfilePictureUrl" alt="@actor.FullName">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => actor.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detail</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


