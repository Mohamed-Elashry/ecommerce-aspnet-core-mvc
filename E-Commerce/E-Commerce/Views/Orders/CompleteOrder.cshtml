@{
    var isArabic = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
<div class="row rounded-circle" style="text-align:center">
   
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 alert alert-success text-center">
            <h2>
                @(
                isArabic ? "!تم كملة الامر بنجاح" :
                           "Your order has been completed successfully!"
                )
            </h2>
            <p>
                @(
                    isArabic ? "!يمكنك التحقق من طلباتك في قسم الطلبات في ملفك الشخصي" :
                    "You can check your orders in the orders section of your profile!"
                )
            </p>
            <hr />
            <p>
                @(
                isArabic ? "!شكرا، نتمني لك يوم سعيد" :
                           "Thanks! Have a nice day!"
                )
            </p>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <a style="color: #0202cd;text-decoration:none" asp-controller="Movies" asp-action="Index" >
                <h3>
                    @(
                   isArabic ? "الذهاب للصفحة الرئيسية" :
                              "Go to main page"
                )
                </h3>
            </a>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>