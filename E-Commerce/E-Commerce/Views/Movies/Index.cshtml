@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List Of Movies";

}
<div class="row form-text">
    <div class="col-md-8 offset-4 mb-4">
        <h2 style="color: #0d6efd">@ViewBag.Welcome</h2>
    </div>
</div>
<div class="row">
    @foreach (var _movie in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width:540px">
              <div class="row g-0">
                  <div class="col-md-12">
                      <div class="card-header text-white bg-info">
                          <p class="card-text">
                              <h5 class="card-title">
                                  @_movie.Name
                                  <a class="text-white" style="float:right"><i class="bi bi-pencil-square"></i></a>
                              </h5>
                          </p>
                      </div>
                  </div>
                  <div class="col-md-6">
                      <img src="@_movie.ImageURL" style="width:100%" alt="@_movie.Name" />
                  </div>
                  <div class="col-md-6">
                      <div class="card-body">
                          <p class="card-text">@_movie.Description</p>
                          <p class="card-text"><b>Cinema: </b>@_movie.Cinema.Name</p>
                          <p class="card-text"><b>Category: </b>@_movie.MovieCategory</p>
                          <p class="card-text"><b>Start Date: </b> @_movie.StartDate.ToString("dd-MM-yyyy mm:ss tt")</p>
                          <p class="card-text"><b>End Date: </b>@_movie.EndDate.ToString("dd-MM-yyyy mm:ss tt")</p>
                          <p class="card-text">
                              <b>Status: </b>
                              @if (DateTime.Now >= _movie.StartDate && _movie.EndDate > DateTime.Now)
                              {
                                  <span class="badge bg-success text-white">AVAILABLE</span>
                              }
                              else if(DateTime.Now > _movie.EndDate)
                              {
                                  <span class="badge bg-danger text-white ">EXPIRED</span>
                              }
                              else
                              {
                              <span class="badge bg-primary text-white">UPCOMING</span>
                              }
                          </p>
                      </div>
                  </div>
                  <div class="col-md-12">
                      <div class="card-footer">
                          <div class="card-text">
                              <a class="btn btn-outline-primary" style="float:right"><i class="bi bi-eye-fill"></i>Show Details</a>
                              <a class="btn btn-success text-white"><i class="bi bi-card-plus"></i>Add To Cart (Price @_movie.Price.ToString("c"))</a>
                          </div>
                      </div>
                  </div>
              </div>
            </div>
        </div>
    }
</div>
