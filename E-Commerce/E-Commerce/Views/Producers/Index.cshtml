@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List Of Producers";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var _producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@_producer.ProfilePictureUrl" alt="@_producer.FullName">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=> _producer.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=> _producer.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Detail</a> |
                            <a class="btn btn-danger texttext-white"><i class="bi bi-trash"></i>Delete</a> 
                        </td>
                            
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>