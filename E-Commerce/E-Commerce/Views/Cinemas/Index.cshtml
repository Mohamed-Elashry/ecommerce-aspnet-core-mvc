@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List Of Cinemas";

}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var _producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@_producer.Logo" alt="@_producer.Name">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=> _producer.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=> _producer.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Detail</a> |
                            <a class="btn btn-danger texttext-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>